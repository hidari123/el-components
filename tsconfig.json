{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom", "es2015"],
		"baseUrl": ".",
		"paths": {
			"@/components/*": ["src/components/*"],
			"@/services/*": ["src/services/*"],
			"@/utils/*": ["src/utils/*"],
			"@/pages/*": ["src/pages/*"],
			"@/icon/*": ["src/icon/*"],
			"@/type/*": ["src/type/*"],
			"@/assets/*": ["src/assets/*"],
			"@/store": ["src/store"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
